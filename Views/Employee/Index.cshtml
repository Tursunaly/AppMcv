@model List<EfMvcDemo.Models.Employee>

<h2>Список сотрудников</h2>

<a class="btn btn-primary" href="/Employee/Create">Добавить нового</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Имя</th>
            <th>Возраст</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Id</td>
                <td>@emp.Name</td>
                <td>@emp.Age</td>
            </tr>
        }
    </tbody>
</table>
